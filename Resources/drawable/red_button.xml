<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item
    android:bottom="5dp"
    android:left="5dp"
    android:right="5dp"
    android:top="5dp">
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
      <item android:state_pressed="true" >
        <shape>
          <solid
              android:color="#a3102d" />
          <stroke
              android:width="1dp"
              android:color="#dc143c" />
          <corners
              android:radius="6dp" />
        </shape>
      </item>
      <item>
        <shape>
          <gradient
              android:startColor="#a3102d"
              android:endColor="#dc143c"
              android:angle="270" />
          <stroke
              android:width="1dp"
              android:color="#dc143c" />
          <corners
              android:radius="6dp" />
        </shape>
      </item>
    </selector>
  </item>
</layer-list>
<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#1e90ff" />
      <stroke
          android:width="1dp"
          android:color="#176ec3" />
      <corners
          android:radius="6dp" />
    <padding
          android:left="30dp"
          android:top="30dp"
          android:right="30dp"
          android:bottom="30dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#1e90ff"
          android:endColor="#176ec3"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#176ec3" />
      <corners
          android:radius="6dp" />
    <padding
          android:left="30dp"
          android:top="30dp"
          android:right="30dp"
          android:bottom="30dp" />
    </shape>
  </item>
</selector>